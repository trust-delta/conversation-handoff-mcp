{
  "name": "conversation-handoff-mcp",
  "version": "0.7.1",
  "bin": {
    "conversation-handoff-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "description": "MCP server for conversation handoff between AI chats/projects",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build:ui": "INPUT=ui/viewer.html vite build",
    "build": "npm run build:ui && tsc",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run check && npm run test && npm run rebuild",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "claude",
    "handoff",
    "conversation",
    "ai",
    "context",
    "model-context-protocol"
  ],
  "author": "trust-delta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trust-delta/conversation-handoff-mcp.git"
  },
  "homepage": "https://github.com/trust-delta/conversation-handoff-mcp#readme",
  "bugs": {
    "url": "https://github.com/trust-delta/conversation-handoff-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.4.1",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "biome check --write"
    ]
  }
}
